<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="21dp"
        android:height="21dp"
        android:left="-3dp"
        android:top="3dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:centerColor="#00000000"
                    android:centerX="0.6"
                    android:endColor="#44000000"
                    android:startColor="#00000000" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="21dp"
        android:height="21dp"
        android:left="-3dp"
        android:top="3dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape>
                <solid android:color="@color/colorPrimaryLight" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="216dp"
        android:height="21dp"
        android:left="14.75dp"
        android:top="-13.75dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00000000"
                android:centerX="0.6"
                android:endColor="#44000000"
                android:startColor="#00000000" />
        </shape>
    </item>

    <item
        android:width="216dp"
        android:height="56dp"
        android:left="14.75dp"
        android:top="1.75dp">
        <shape>
            <solid android:color="@color/colorPrimaryLight" />
        </shape>
    </item>

    <item
            android:width="216dp"
            android:height="56dp"
        android:top="16.5dp">
        <shape>
            <solid android:color="@color/colorPrimaryLight" />
        </shape>
    </item>

</layer-list>
